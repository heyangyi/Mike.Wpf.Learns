<UserControl
    x:Class="mike_notepads_app.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:mike_notepads_app.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="650"
    Height="350"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.4*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image Margin="50" Source="/Images/login-bg.png" />
        <DockPanel
            Grid.Column="1"
            Margin="10,10,20,10"
            VerticalAlignment="Center"
            LastChildFill="False">
            <TextBlock
                Margin="10"
                DockPanel.Dock="Top"
                FontSize="20"
                FontWeight="Bold"
                Text="欢迎使用" />
            <TextBox
                Margin="10"
                md:HintAssist.Hint="请输入登录名"
                DockPanel.Dock="Top"
                Text="{Binding UserName}" />
            <PasswordBox
                Margin="10"
                md:HintAssist.Hint="请输入登录密码"
                DockPanel.Dock="Top" />
            <Button
                Margin="10"
                Command="{Binding LoginCommand}"
                Content="登录系统"
                DockPanel.Dock="Top" />

            <DockPanel
                Margin="10"
                DockPanel.Dock="Top"
                LastChildFill="False">
                <TextBlock Text="注册账号" />
                <TextBlock DockPanel.Dock="Right" Text="忘记密码" />
            </DockPanel>
        </DockPanel>
    </Grid>
</UserControl>
